syntax on
imap jk <Esc>
ino <down> <Nop>
ino <up> <Nop>
ino <left> <Nop>
ino <right> <Nop>
set autoindent
set number
set hlsearch

nmap<C-down> <C-w>j
nmap<C-up> <C-w>k
nmap<C-left> <C-w>h
nmap<C-right> <C-w>l
nmap<S-right> <C-w>>
nmap<S-left> <C-w><
nmap<S-down> <C-w>-
nmap<S-up> <C-w>+
" format all file
nmap == mzggvG='z

" starcraft 2 position style:
nmap m1 ma
nmap m2 ms
nmap m3 md
nmap m4 mf
nmap m5 mg
nmap m6 mh
nmap m7 mj
nmap 11 'azz
nmap 22 'szz
nmap 33 'dzz
nmap 44 'fzz
nmap 55 'gzz
nmap 66 'hzz
nmap 77 'jzz
